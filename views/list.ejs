<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>To Do List</title>
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>
    <div class="box" id="heading">
      <h1><%=user%>'s List</h1>

      <form action="/logout" method="post">
        <button id="logout" type="submit" name="logout">Logout</button>
      </form>

    </div>




    <div class="box">
      <% items.forEach(function(item){ %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="toDelete" value="<%=item._id%>" onChange="this.form.submit()">
          <p><%= item.name %></p>
        </div>
        <% }); %>
      </form>


      <form class="item" action="/add" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus>
        <button class"add" type="submit" name="button">+</button>

      </form>



    </div>

  </body>
</html>
